{
  "compilerOptions": {
    "target": "ES2017",
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "../dist/types",
    "removeComments": false
  },
  "include": [
    "../next-env.d.ts",
    "../src/lib"
  ],
  "exclude": [
    "../node_modules"
  ]
}
